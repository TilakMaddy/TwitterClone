extends layouts/login-layout

block content

  .loginContainer
    h1 Login

    form(method="post")

      p.errorMessage #{errorMessage}

      input(type="text", name="logUsername", placeholder="Username or email", value="duck" ,required="")
      input(type="password", name="logPassword", placeholder="Password", required="", value="duck")
      input(type="submit", value="Login")

    a(href="/register") Need an account ? Register here.