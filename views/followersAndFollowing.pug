extends layouts/main-layout

block content

  if !profileUser
    span.errorMessage Check the URL you are trying to access

  else
    script.
      var profileUserId = '!{profileUser._id}';
      var selectedTab = '!{selectedTab}';

    .tabsContainer
      +createTab("Following", `/profile/${profileUser.username}`, selectedTab != "followers")
      +createTab("Followers", `/profile/${profileUser.username}/replies`, selectedTab == "followers")

    .resultsContainer

block scripts
  script(src="/js/followersAndFollowing.js")